<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/layout10"
        android:layout_width="match_parent"
        android:layout_height="95px"
        android:background="#347C17" >

        <Button
            android:id="@+id/previous_ca_le"
            android:layout_width="95px"
            android:layout_height="95px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:background="@drawable/previous_xml" />

        <TextView
            android:id="@+id/title_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Basic Lesson"
            android:textColor="#ffffff"
            android:textSize="27dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout11"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/layout10" >

        <ImageView
            android:id="@+id/img_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_le" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:id="@+id/socau"
                android:textColor="#dbE42217"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layout11"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <RelativeLayout
            android:id="@+id/layout13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:layout_centerInParent="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/lesson_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxWidth="220dp"
                android:text="You&apos;re have 20 questions in 5 minute. Click to start!"
                android:textColor="#dbE42217"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start_le"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson_toast"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Start" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/layout14"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <TextView
                android:id="@+id/answer_le"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#dbE42217"
                />
            <LinearLayout 
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="35dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/layout15"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/A_le"
                    android:background="@drawable/btn_answer_bg"
                    android:layout_height="50dp"
                    android:layout_width="270dp"
                    android:text="A"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    />
                <Button
                    android:background="@drawable/btn_answer_bg"
                    android:layout_marginTop="5dp"
                    android:id="@+id/B_le"
                    android:layout_height="50dp"
                    android:layout_width="270dp"
                    android:text="B"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    />
                <Button
                    android:background="@drawable/btn_answer_bg"
                    android:layout_marginTop="5dp"
                    android:id="@+id/C_le"
                    android:layout_height="50dp"
                    android:layout_width="270dp"
                    android:text="C"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    />
                <Button
                    android:background="@drawable/btn_answer_bg"
                    android:layout_marginTop="5dp"
                    android:id="@+id/D_le"
                    android:layout_height="50dp"
                    android:layout_width="270dp"
                    android:textColor="#000000"
                    android:text="D"
                    android:textSize="18dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>