<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:textSize="30dp"
        android:textColor="#347C17"
        android:textStyle="bold"
        android:text="Login" />

    <RelativeLayout
        android:id="@+id/email_layout"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login" >
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/email"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/email_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/email_icon"
            android:text="Email"
            android:layout_marginLeft="10dp"
            android:textColor="#347C17"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/email_icon"
            android:textSize="20dp" 
            android:singleLine="true"
            android:text="truongcan93@yahoo.com.vn"
            android:background="@drawable/edit_bg"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/email_layout"
        android:id="@+id/password_layout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		 >
        <ImageView
            android:id="@+id/pass_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/password"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/pass_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pass_icon"
            android:text="Password"
            android:layout_marginLeft="10dp"
            android:textColor="#347C17"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/pass_icon"
            android:textSize="20dp"
            android:text="thethao" 
            android:singleLine="true"
            android:background="@drawable/edit_bg"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/toast"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:text="Thong bao o day"
        android:layout_below="@+id/password_layout"
        android:layout_alignLeft="@+id/email_layout"
        android:textColor="#ff4500"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_layout"
        android:text="Login"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="@drawable/btn_bg_green"
        android:layout_marginTop="40dp"
        android:layout_height="45dp"
        android:layout_width="100dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/create_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Create new account"
        android:textSize="16dp"
        android:textColor="#ff4500"
        android:textStyle="bold" />

</RelativeLayout>